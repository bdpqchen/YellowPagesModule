<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="yp_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yp_colorPrimary</item>
        <item name="colorPrimaryDark">@color/yp_colorPrimaryDark</item>
        <item name="colorAccent">@color/yp_colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowTranslucentStatus"
            tools:targetApi="kitkat">true</item>
    </style>

    <declare-styleable name="DepartmentItemView">
        <attr name="yp_text" format="string"/>
        <attr name="yp_text_color" format="color"/>
        <attr name="yp_text_size" format="dimension"/>
        <attr name="yp_icon_src" format="reference"/>
        <attr name="yp_icon_width" format="dimension"/>
        <attr name="yp_icon_height" format="dimension"/>

    </declare-styleable>
        


</resources>
