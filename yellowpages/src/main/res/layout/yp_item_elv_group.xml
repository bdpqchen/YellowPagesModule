<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_drop_right"
        android:src="@drawable/ic_keyboard_arrow_right_black_18dp"
        android:visibility="visible"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_drop_down"
        android:src="@drawable/ic_keyboard_arrow_down_black_18dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:textColor="@color/font_block_700"
        android:textSize="19sp"
        android:layout_centerVertical="true"

        />

    <TextView
        android:id="@+id/tv_group_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/font_block_400"
        android:textSize="17sp"
        android:layout_centerVertical="true"

        />


</RelativeLayout>